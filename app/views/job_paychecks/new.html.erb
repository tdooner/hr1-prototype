<div class="grid-row">
  <div class="grid-col-12 usa-prose">
    <h1>Add Paycheck</h1>
    
    <p class="usa-intro">
      Please provide details about your paycheck from <%= @engagement_form.prior_month_name %>.
    </p>
    
    <% if @job_paycheck.errors.any? %>
      <div class="usa-alert usa-alert--error" role="alert">
        <div class="usa-alert__body">
          <h4 class="usa-alert__heading">Please correct the following errors:</h4>
          <ul class="usa-alert__text">
            <% @job_paycheck.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    
    <%= form_with model: [@engagement_form, @job_paycheck], local: true, class: "usa-form usa-form--large", builder: UswdsFormBuilder do |form| %>
      
      <fieldset class="usa-fieldset">
        <legend class="usa-legend--large">Paycheck Details</legend>
        
        <%= form.date_field :pay_date, "Pay Date", "Select the date when you received this paycheck." %>
        
        <%= form.number_field :gross_pay_amount, "Gross Pay Amount ($)", "Enter the gross pay amount before taxes and deductions.", step: "0.01", min: "0" %>
        
        <%= form.number_field :hours_worked, "Hours Worked", "Enter the number of hours you worked for this paycheck (e.g., 40.0 for 40 hours).", step: "0.1", min: "0" %>
      </fieldset>
      
      <div class="usa-form-group">
        <%= form.submit "Save", class: "usa-button" %>
        <%= link_to "Cancel", new_engagement_form_job_path(@engagement_form), class: "usa-button usa-button--outline" %>
      </div>
    <% end %>
  </div>
</div>
