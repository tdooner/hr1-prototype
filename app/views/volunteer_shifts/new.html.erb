<div class="grid-row">
  <div class="grid-col-12">
    <h1>Tell us about your volunteering</h1>
    
    <p>
      Add details about your volunteering during <strong><%= @engagement_form.prior_month_name %></strong>. Your state Medicaid agency may call the organization to confirm this information.
    </p>
    
    <% if @volunteer_shift.errors.any? %>
      <div class="usa-alert usa-alert--error" role="alert">
        <div class="usa-alert__body">
          <h4 class="usa-alert__heading">Please correct the following errors:</h4>
          <ul class="usa-alert__text">
            <% @volunteer_shift.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    
    <%= form_with model: @volunteer_shift, url: volunteer_shifts_path, local: true, class: "usa-form usa-form--large", builder: UswdsFormBuilder do |form| %>
      
      <fieldset class="usa-fieldset">
        <%= form.text_field :organization_name, "Organization Name", "Enter the name of the nonprofit organization where you volunteered." %>
        
        <%= form.date_field :shift_date, "Date of Volunteer Shift", "Select the date when you volunteered." %>
        
        <%= form.number_field :hours, "Number of Hours", "Enter the number of hours you volunteered (e.g., 2.5 for 2 hours and 30 minutes).", step: "0.5", min: "0.5" %>
      </fieldset>
      
      <div class="usa-form-group">
        <%= form.submit "Save", class: "usa-button" %>
        <%= link_to "Cancel", new_volunteer_path, class: "usa-button usa-button--outline" %>
      </div>
    <% end %>
  </div>
</div>
